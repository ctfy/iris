<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/itjiaozi_the_main_bg"
    android:orientation="vertical" >

    <ViewAnimator
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <include layout="@layout/itjiaozi_the_main_view_animator_child_openapp" />

        <include layout="@layout/itjiaozi_the_main_view_animator_child_message" />

        <include layout="@layout/itjiaozi_the_main_view_animator_child_call" />

        <include layout="@layout/itjiaozi_the_main_view_animator_child_btns" />
    </ViewAnimator>

    <Button
        android:id="@+id/speekButton"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/car_tap_speak_back"
        android:onClick="onClick"
        android:text="点击并说话"
        android:textColor="#FFF"
        android:textSize="18sp" />

</RelativeLayout>